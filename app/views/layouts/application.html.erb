<!DOCTYPE html>
<html>
  <head>
	<title>DenCesty</title>
	<%= stylesheet_link_tag    "application" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>

	<script>

	  $(document).ready(function(){
		$("ul.sf-menu").superfish({
		  delay:     700               // 1.2 second delay on mouseout
		});
	  });

	</script>
  </head>
  <body bgcolor ="black">
	<div class="hmenu">
	  <%= render 'devise/menu/login_items' %>
	</div>
	<div class="hmenu">
	  <%= render 'registrations/menu' %>
	</div>

	<div class="nav">
	  <%=  render_navigation(:expand_all => true) %>
	</div>
	<div class="main-column">
	  <div class="main-content">
		<div class="walker-nav">
		  <% if walker_signed_in? %>
			<%=  render_navigation(:context=> 'walker', :expand_all => true) %>
		  <% else %>
		  <ul>
		  </ul>
		  <% end %>
		</div>
		<div class="content">
		  <div class="main-text">
			<p class="notice"><%= notice %></p>
			<p class="alert"><%= alert %></p>

			<%= yield %>
		  </div>
		</div>
	  </div>
	</div>
  </body>
</html>
