<h1>Výsledky pro trasu "<%= @race.name_cs %>"</h1>

<%= link_to "<< Zpět na seznam tras", races_path %>
 | 
<%= link_to 'Mapa', :controller => :map, :action => :show, :id => @race.id %>

<table summary="Scoreboard of selected Race">
    <tr>
      <th>Závodník</th>
      <th>Stav (odstartováno/ukončeno)</th>
      <th>Vzdálenost (m)</th>
      <th>Průměrná rychlost (km/h)</th>
      <th>Poslední aktualizace</th>
      <%  if is_admin? %>
        <th>Created</th>
      <% end %>
      <th>Poslední známá pozice</th>
      <th>Poslední průchozí bod</th>
      <%  if is_admin? %>
      <th></th>
      <% end %>
    </tr>
    <% @scoreboard.each do |entry| %>
    <tr>
      <td><%= entry.walker.nameSurname%> (<%= entry.walker.id %>) </td>
      <td><%= raceStatePretty(entry.raceState) %></td>
      <td><%= entry.distance %></td>
      <td><%= entry.avgSpeed %></td>
      <td><%= entry.updated_at %></td>
      <%  if is_admin? %>
      <td><%= entry.created_at %></td>
      <% end %>
      <td><%= entry.latitude.round(5) %>, <%= entry.longitude.round(5) %></td>
      <td><%= entry.lastCheckpoint %></td>
      <%  if is_admin? %>
      <td><%= link_to 'Delete', [@race, entry], :confirm => 'Are you sure you want to delete this scoreboard entry?', :method => :delete %></td>
      <% end %>
    </tr>
    <% end %>
</table>
