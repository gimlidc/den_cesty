<h1>Scoreboard#index</h1>

<table class="listing" summary="Race status">
    <tr class="header">
      <th>Dc</th>
      <th>Walker</th>
      <th>Race State</th>
      <th>Last Checkpoint</th>
      <th>Distance</th>
      <th>Avg Speed</th>
      <th>Updated at</th>
      <th>Started at</th>
      <th>Latitude</th>
      <th>Longitude</th>
    </tr>
    <% @scoreboard.each do |entry| %>
    <tr>
      <td><%= entry.dc_id %></td>
      <td><%= entry.walker.nameSurname%> (<%= entry.walker.id %>) </td>
      <td><%= raceStatePretty(entry.raceState) %></td>
      <td><%= entry.lastCheckpoint %></td>
      <td><%= entry.distance %></td>
      <td><%= entry.avgSpeed %></td>
      <td><%= entry.updated_at %></td>
      <td><%= entry.created_at %></td>
      <td><%= entry.latitude %></td>
      <td><%= entry.longitude %></td>
    </tr>
    <% end %>
</table>
