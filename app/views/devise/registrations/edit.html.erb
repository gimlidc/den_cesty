<h2><%= t("Edit Account") %></h2>

<%= form_for(resource, :as => resource_name, :url => walker_registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
	<%= f.email_field :email %></div>

  <div><%= f.label t 'password' %><i>(<%= I18n.t("leave blank if you don't want to change it") %>)</i><br />
	<%= f.password_field :password %></div>

  <div><%= f.label t 'password_confirmation' %><br />
	<%= f.password_field :password_confirmation %></div>

  <div><%= f.label t 'name' %><br />
	<%= f.text_field :name %></div>

  <div><%= f.label t 'surname' %><br />
	<%= f.text_field :surname %></div>
	
  <div><%= f.label :phone %><br />
	<%= f.text_field :phone %></div>

  <div><%= f.label t 'sex' %><br />
	<%= f.select :sex,
	 options_for_select(sex_options,  f.object.sex)
	%></div>

  <div><%= f.label t 'username' %><br />
	<%= f.text_field :username %></div>

  <div><%= f.label t 'year_of_birth' %><br />
	<%= f.number_field :year %></div>

  <div><%= f.label t 'current_password' %> <i>(<%= I18n.t("we need your current password to confirm your changes") %>)</i><br />
	<%= f.password_field :current_password %></div>

  <div><%= f.submit t "Update" %></div>
<% end %>