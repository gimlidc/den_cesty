<h1>Tvorba nové trasy</h1>

<%= link_to "<< Zpět na seznam tras", races_url %>

<div>

  <%= form_for @race do |f| %>

  <table summary="Race form fields">
    <tr>
      <th><%= f.label(:name_cs, "Jméno trasy") %></th>
      <td><%= f.text_field(:name_cs) %></td>
    </tr>
    <tr>
      <th><%= f.label(:name_en, "Upřesnění, nebo anglický název") %></th>
      <td><%= f.text_field(:name_en) %></td>
    </tr>
    <tr>
      <th><%= f.label(:start_time, "začátek závodu") %></th>
      <td><%= f.datetime_select(:start_time) %> UTC</td>
    </tr>
    <tr>
      <th><%= f.label(:finish_time, "konec závodu") %></th>
      <td><%= f.datetime_select(:finish_time) %> UTC</td>
    </tr>
    <% if is_admin? %>
    <tr>
      <th><%= f.label(:visible) %></th>
      <td><%= f.check_box(:visible) %></td>
    </tr>
    <% end %>
    
	</table>

	<div>
    <%= submit_tag("Vytvořit trasu") %>
  </div>

  <% end %>
</div>
